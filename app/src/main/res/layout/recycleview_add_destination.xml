<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/recyclerAddDestinationIcon"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/recyclerAddDestinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/recyclerAddDestinationIcon"
        android:maxLines="1"
        android:padding="8dp"
        android:text="Location Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/recyclerAddDestinationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/recyclerAddDestinationIcon"
        android:padding="8dp"
        android:text="Airport Code"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Switch
        android:id="@+id/recyclerAddDestinationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>